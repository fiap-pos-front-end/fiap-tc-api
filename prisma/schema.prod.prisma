datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id         Int         @id @default(autoincrement())
  email      String      @unique
  password   String
  categories Category[]
  transactions  Transaction[]
}

model Category {
  id         Int        @id @default(autoincrement())
  name       String
  user       User       @relation(fields: [userId], references: [id])
  userId     Int
  transaction   Transaction[]
  @@unique([name, userId])
}

model Transaction {
  id          Int          @id @default(autoincrement())
  type        String
  date        DateTime
  amount      Float
  attachments String

  category    Category     @relation(fields: [categoryId], references: [id])
  categoryId  Int

  user        User         @relation(fields: [userId], references: [id])
  userId      Int
}
